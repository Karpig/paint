{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "declaration": true,
    "rootDir": ".",
    "paths": {
      "@client/*": ["client/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["client", "server"],
  "exclude": ["node_modules"]
}
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "outDir": "dist/static/js",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}